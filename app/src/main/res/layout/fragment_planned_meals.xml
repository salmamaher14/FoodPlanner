<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="getplannedmeals.view.PlannedMealsFragment">

    <!-- Header TextView -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday's Meals"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <!-- FrameLayout to contain RecyclerView and TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView for displaying meals -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/plannedMealRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Placeholder TextView (if needed) -->
<!--        <TextView-->
<!--            android:id="@+id/dayTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="TextView"-->
<!--            android:visibility="visible" />-->
    </FrameLayout>
</LinearLayout>
